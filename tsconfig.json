{
	"compilerOptions": {
		"outDir": "dist",
		"module": "CommonJS",
		"target": "ES2017",
		"moduleResolution": "Node",
		"lib": ["ES2017"],
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"baseUrl": "."
	},
	"include": ["pad.ts", "pad.spec.ts"]
}
